class GraphqlController < ApplicationController
  def execute
    result = <%= schema_name %>.execute(
      query,
      variables: variables,
      context: context,
      operation_name: operation_name,
    )

    render json: result
  end

  private

  def query
    params[:query]
  end

  def variables
    vars = params.fetch(:variables, {})

    case vars
    when String
      JSON.parse(vars)
    else
      vars
    end
  end

  def context
    {}
  end

  def operation_name
    params[:operationName]
  end
end
